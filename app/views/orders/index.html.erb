<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 shadow pt-3">
            <h1 class='text-center'>All Orders</h1>
            <hr />
            <table>
            <thead>
                <tr>
                <th class='col-md-2'>Order Number</th>
                <th class='col-md-2'>Total Price</th>
                <th class='col-md-2'>Status</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td><%= order.id %></td>
                    <td><%= order.total_price %></td>
                   <td>
                        <%= form_with(model: order, local: true, url: orders_path(order), method: :patch) do |form| %>
                        <%= form.select :status, Order.statuses.keys, prompt: 'Select Status',class:'form-control' %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
            </table>
             <div class="pag-bar mt-3">
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
        </div>
    </div>
</div>




<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 offset-md-3 shadow py-3">
        <h5 class='text-center'>All Categories</h5>
        <hr />
        <div class='text-end'>   
            <%= link_to "Add Category", new_category_path, class:'btn btn-outline-info' %>
        </div>
            <div class="table-responsive mt-3">
                <table class="table border">
                    <thead>
                        <tr>
                            <th scope="col" class='col-md-2' >Name</th>
                            <th scope="col" class='col-md-2 text-end pe-5'> Actions </th>
                        </tr>
                    </thead>
                    <tbody>
                     <% @categories.each do |category| %>
                        <tr class="">
                            <td><%= category.name %></td>
                            <td class='text-end'>
                            <%= link_to "Edit", edit_category_path(category), class:'btn btn-outline-warning' %>
                            <%= link_to "Delete",category, class:'btn btn-outline-danger', data: { confirm: 'Are you sure? All products in this category will also be deleted' }, method: :delete %>
                            
                            </td>
                        </tr>
                     <% end %>
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</div>
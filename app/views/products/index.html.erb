<div class="container my-5">
    <div class="row">
        <div class="col-md-12 text-center"><h2>All Available Products</h2></div>
        <hr /> <br />
        <div class="col-md-12 text-end">
        <%= link_to "Add Product", new_product_path,class:'btn btn-outline-success mb-3' %>
        </div>
    </div>
    <div class="row">
       <div class="table-responsive">
        <table class="table border">
            <thead>
                <tr>
                    <th class='col-md-3'>Product Image</th>
                    <th class='col-md-6'>Product Info</th>
                    <th class='col-md-3 text-end pe-4'>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @products.each do |product| %>
                  <tr>
                    <td class='col-md-3'><%= image_tag product.image, class:'img img-fluid border w-75'%></td> 
                    <td class='col-md-7'>
                        <h6> <%= product.name %> </h6>
                        <p> <%= truncate(product.description, length: 100) %> </p>
                        <p class='text-info'>Price: <%= product.price %>$</p>
                    </td>
                    <td class='col-md-2 text-end'>
                        <%= link_to edit_product_path(product), class: 'btn btn-outline-warning' do %>
                            <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' do %>
                            <i class="fas fa-trash-alt"></i>
                        <% end %>
                    </td>

                </tr>
               <% end %>
            </tbody>
         </div>
        </table>
        <div class="pag-bar">
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
    </div>
</div>
</div>
<div class="container mt-5">
    <div class="row">
       <div class="table-responsive">
        <table class="table border">
            <thead>
                <tr>
                    <th class='col-sm-3'>Product Image</th>
                    <th class='col-sm-6'>Product Info</th>
                    <th class='col-sm-3'>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @product.each do |product| %>
                  <tr>
                    <td class='col-sm-3'><%= image_tag product.image, class:'img img-fluid border'%></td> 
                    <td class='col-sm-7'>
                        <h6> <%= product.name %> </h6>
                        <p> <%= product.description %> </p>
                        <p class='text-info'>Price: <%= product.price %>$</p>
                    </td>
                    <td class='col-sm-2'>
                        <%= link_to "Edit", edit_product_path(product), class:'btn btn-outline-warning' %>
                        <%= link_to "Delete", product ,method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %>
                    </td>
                </tr>
               <% end %>
            </tbody>
        </table>
       </div>
       
    </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-12">
          <%= image_tag @product.image, class:'img img-fluid border'%>
        </div>
        <div class="col-md-12 mt-3">
          <div class="row">
            <div class="col-4">
              <h5><%= @product.name %></h5>
            </div>
            <div class="col-8 text-end text-info fw-bold">
              <p>Price: <%= @product.price %>$</p>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <p><%= @product.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="border px-3 py-4">
        <h6 class="fst-italic text-center"><%= @product.name %></h6>
        <p class="text-center"><%= @product.price %>$</p>
        <%= link_to "Add to cart", @product ,class:"btn btn-outline-primary form-control"%>
      </div>
    </div>
  </div>
</div>
